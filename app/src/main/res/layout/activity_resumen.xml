<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25sp"
        android:padding="10sp"
        android:clipChildren="false"
        android:background="@drawable/resumen"

        android:orientation="vertical">
        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:elevation="10sp"
            android:background="@drawable/card"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_margin="10sp"
                android:elevation="20dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/seleccion" />
            <ImageView
                android:id="@+id/imageView2"
                android:elevation="20dp"
                android:layout_margin="10sp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/seleccion" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/card"
            android:padding="10sp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewFuerza"
                android:layout_width="60sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fuerza:" />

            <ProgressBar

                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progressBarFuerza"
                android:layout_weight="10"
                android:progressBackgroundTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="10"

                />
            <TextView
                android:id="@+id/textViewFuerza_i"
                android:layout_weight="1"
                android:layout_marginStart="10sp"
                android:textColor="#000000"
                android:layout_width="25sp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/indicador"
                android:text="0" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewDefensa"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="Defensa" />
            <ProgressBar

                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progressBarDefensa"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:max="10"

                />
            <TextView
                android:id="@+id/textViewDefensa_i"
                android:layout_weight="1"
                android:layout_marginStart="10sp"
                android:layout_width="25sp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/indicador"
                android:text="0" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewTamMochila"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Mochila" />
            <ProgressBar

                android:id="@+id/progressBarMochila"

                style="?android:attr/progressBarStyleHorizontal"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:max="10"

                />
            <TextView
                android:id="@+id/textViewMochila_i"
                android:layout_weight="1"
                android:layout_marginStart="10sp"

                android:layout_width="25sp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/indicador"
                android:text="0" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewVida"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Vida" />
            <ProgressBar

                android:id="@+id/progressBarVida"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="10"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"/>
            <TextView
                android:id="@+id/textViewVida_i"
                android:layout_weight="1"
                android:layout_marginStart="10sp"
                android:layout_width="25sp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/indicador"

                android:text="0" />
        </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_margin="30dp"
            android:stateListAnimator="@null"
            android:id="@+id/activity_aleatorizador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@drawable/seleccion"

            android:text="Button" />


    </LinearLayout>
</LinearLayout>